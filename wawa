DOMAIN-KEYWORD, googleads, reject

[URL Rewrite]

# bilibili精简并阻止缓存
(?=resource\?resourceUrl|upos\-sz\-staticcos) url reject
(?=.*(hdslb\.com.*(\.zip|\.mp4)))^((?!(hdslb\.com\/bfs\/app-static\/)).)*$ url reject

# 小红书精简并阻止缓存
(?=xhscdn.*\.(otf|OTF|ttf|TTF|zip)) url reject

[MITM]
hostname = *.hdslb.com, *.bilivideo.com, manga.bilibili.com, api.live.bilibili.com, api.vc.bilibili.com, app.bilibili.com, app.biliapi.net, api.bilibili.com, api.biliapi.net, grpc.biliapi.net, *.xhscdn.com
